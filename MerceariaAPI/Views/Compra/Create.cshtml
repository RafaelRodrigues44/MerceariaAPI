@model MerceariaAPI.Models.Compra

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Criar Nova Compra</h2>

<h4>Compra</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="DataCompra" class="control-label">Data da Compra</label>
                <input asp-for="DataCompra" class="form-control" type="date" />
                <span asp-validation-for="DataCompra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lote" class="control-label">Lote</label>
                <input asp-for="Lote" class="form-control" />
                <span asp-validation-for="Lote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataFabricacao" class="control-label">Data de Fabricação</label>
                <input asp-for="DataFabricacao" class="form-control" type="date" />
                <span asp-validation-for="DataFabricacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataValidade" class="control-label">Data de Validade</label>
                <input asp-for="DataValidade" class="form-control" type="date" />
                <span asp-validation-for="DataValidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fabricante" class="control-label">Fabricante</label>
                <input asp-for="Fabricante" class="form-control" />
                <span asp-validation-for="Fabricante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vendedor" class="control-label">Vendedor</label>
                <input asp-for="Vendedor" class="form-control" />
                <span asp-validation-for="Vendedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transportadora" class="control-label">Transportadora</label>
                <input asp-for="Transportadora" class="form-control" />
                <span asp-validation-for="Transportadora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecoCompra" class="control-label">Valor Unitário</label>
                <input asp-for="PrecoCompra" class="form-control" />
                <span asp-validation-for="PrecoCompra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecoVenda" class="control-label">Preço de Venda</label>
                <input asp-for="PrecoVenda" class="form-control" />
                <span asp-validation-for="PrecoVenda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="produtos" class="control-label">Produtos</label>
                <select id="produtos" name="produtos" class="form-control" multiple>
                    @foreach (var produto in ViewBag.Produtos) 
                    {
                        <option value="@produto.Id">@produto.Nome</option>
                    }
                </select>
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <label asp-for="Quantidade" class="control-label">Quantidade</label>
                <input asp-for="Quantidade" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>
<div>
    <a href="/Compra" class="btn btn-secondary">Voltar</a>
</div>
