<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>MerceariaAPI</title>
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }
        .header {
            background-color: #333;
            color: #fff;
            padding: 10px 20px;
            text-align: center;
        }
        .sidebar {
            background-color: #343a40;
            color: #fff;
            width: 200px;
            height: 100%;
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 56px; 
        }
        .sidebar h2 {
            padding-left: 20px;
            margin-bottom: 10px;
        }
        .menu-item {
            padding: 10px 20px;
            cursor: pointer;
            transition: background-color 0.3s;
            border-radius: 20px;
            width: 120px;
            margin-left: 20px;
        }
        .menu-item:hover {
            background-color: #495057;
        }
        .submenu {
            display: none;
            background-color: #495057;
            position: absolute;
            top: 50px; 
            left: 100%;
            width: 150px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
            z-index: 1; 
        }
        .submenu a {
            display: block;
            color: #fff;
            padding: 10px 20px;
            text-decoration: none;
            transition: background-color 0.3s;
        }
        .submenu a:hover {
            background-color: #6c757d;
        }
    </style>
</head>
<body>
    <!-- Cabeçalho (Header) -->
    <div class="header">
        <h1>MerceariaAPI</h1>
    </div>

    <!-- Barra lateral (Sidebar) -->
    <div class="sidebar">
        <h2>Menu</h2>
        <!-- Botões com Submenus -->
        <div class="menu-item" onclick="toggleSubMenu('submenu1')">Tipo de Produto</div>
        <div class="submenu" id="submenu1">
            <a href="/TipoProduto/List">Listar</a>
            <a href="/TipoProduto/Create">Adicionar</a>
        </div>

        <div class="menu-item" onclick="toggleSubMenu('submenu2')">Produto</div>
        <div class="submenu" id="submenu2">
            <a href="/Produto/List">Listar</a>
            <a href="/Produto/Create">Adicionar</a>
        </div>

        <div class="menu-item" onclick="toggleSubMenu('submenu3')">Compra</div>
        <div class="submenu" id="submenu3">
            <a href="/Compra/List">Listar</a>
            <a href="/Compra/Create">Adicionar</a>
        </div>
    </div>

    <!-- Conteúdo Principal -->
    <div style="margin-left: 250px; padding: 20px;">
        <!--  Conteúdo específico de cada página -->
        @RenderBody()
    </div>

    <!-- Rodapé (Footer) -->
    <div style="background-color: #333; color: #fff; padding: 10px; position: fixed; bottom: 0; width: 100%; text-align: center;">
        &copy; 2024 Senai Gaspar Ricardo Júnior. Todos os direitos reservados.
    </div>

    <!-- Adicione os scripts JavaScript aqui -->
    <script>
        function toggleSubMenu(submenuId) {
            var submenu = document.getElementById(submenuId);
            if (submenu.style.display === "block") {
                submenu.style.display = "none";
            } else {
                submenu.style.display = "block";
            }
        }
    </script>
</body>
</html>
