<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>MerceariaAPI</title>
    <!-- Adicione os links para os arquivos de estilo CSS aqui -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Adicione o seu CSS personalizado aqui -->
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
    <div class="container-fluid">
        <!-- Cabeçalho (Header) -->
        <header class="row bg-dark text-light p-3">
            <div class="col">
                <h1><span id="tituloPagina">Título da Página</span></h1>
            </div>
        </header>

        <!-- Conteúdo Principal -->
        <main class="row mt-3">
            <!-- Menu Lateral -->
            <aside class="col-md-3">
                <h2>Menu Lateral</h2>
                <!-- Aqui você pode adicionar links ou outras opções do menu -->
            </aside>

            <!-- Área de Conteúdo -->
            <section class="col-md-9">
                <h2>Conteúdo</h2>
                <!-- Aqui será renderizado o conteúdo específico de cada página -->
                @RenderBody()
            </section>
        </main>

        <!-- Rodapé (Footer) -->
        <footer class="row bg-dark text-light p-3 mt-5">
            <div class="col text-center">
                &copy; 2024 Minha Aplicação. Todos os direitos reservados.
            </div>
        </footer>
    </div>

    <!-- Adicione os scripts JavaScript aqui -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- Adicione o seu JavaScript personalizado aqui -->
    <script src="~/js/scripts.js"></script>
</body>
<script>
  // Defina o título inicial (opcional)
  document.getElementById("tituloPagina").textContent = "Título Inicial";

  // Função para atualizar o título dinamicamente (você pode chamar essa função quando necessário)
  function atualizarTitulo(novoTitulo) {
    document.getElementById("tituloPagina").textContent = novoTitulo;
  }
</script>
</html>
