@model MerceariaAPI.Areas.Identity.Models.ApplicationUser

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar Usuário</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div>
        <label for="Username">Nome de Usuário:</label>
        <input type="text" id="Username" name="Username" value="@Model.UserName" required />

        <label for="Email">Email:</label>
        <input type="email" id="Email" name="Email" value="@Model.Email" required />

        <label for="TypeUserId">Cargo:</label>
        <input type="typeuserid" id="TypeUserId" name="TypeUserid" value="@Model.TypeUser" required />
    </div>
    <div>
        <button type="submit">Salvar</button>
    </div>
</form>

<a href="/ApplicationUser/List">Voltar para a Lista de Usuários</a>
