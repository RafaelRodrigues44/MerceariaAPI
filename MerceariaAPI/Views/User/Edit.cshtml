@model MerceariaAPI.Areas.Identity.Models.ApplicationUser

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        body {
            font-family: Arial, sans-serif;
            background-image: url("https://citybreakinfo.com/pix/2018-07/1532261860269744-1.jpg");
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 100vh;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            color: #ede9e9; /* Texto branco */
        }

        .form-container {
            width: 400px;
            background-color: rgba(0, 0, 0, 0.5); 
            border-radius: 10px;
            box-shadow: 0px 0px 20px rgba(50, 49, 49, 0.1);
            backdrop-filter: blur(10px); 
            -webkit-backdrop-filter: blur(10px); 
            border: 1px solid rgba(255, 255, 255, 0.2); 
            margin-top: 200px;
            margin-left: 540px;
            margin-bottom: 30px ;
            padding-bottom: 20px;
            text-align: center;
        }

        .form-group {
            margin-bottom: 20px;
            text-align: center;
        }

        button[type="submit"] {
            width: 40%;
            padding: 10px;
            font-size: 16px;
            background-color: #376c49;
            color: #fff;
            border: none;
            border-radius: 3px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        button[type="submit"]:hover {
            background-color: #94be86;
        }

        input[type="text"],
        input[type="email"],
        input[type="number"] {
            width: 60%; 
            padding: 10px;
            font-size: 12px;
            border: 1px solid #ccc;
            border-radius: 3px;
            background-color: white; 
            color: #333; 
            -webkit-appearance: none; 
            -moz-appearance: none; 
            appearance: none;
            margin-bottom: 5px;
        }

        label {
            font-weight: bold;
            margin-bottom: 8px;
            display: block;
            color: #ede9e9;
            text-align:center;
        }

        a {
            display: block;
            text-align: center;
            color: #ede9e9;
            text-decoration: none;
            margin-top: 5px;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
}

<div class="form-container">
    <h3>Editar Usuário</h3>

    <form asp-action="Edit" method="post">
        <div class="form-group">
            <label for="UserName">Nome de Usuário:</label>
            <input type="text" id="UserName" name="UserName" value="@Model.UserName" required />
        </div>
        <div class="form-group">
            <label for="Email">Email:</label>
            <input type="email" id="Email" name="Email" value="@Model.Email" required />
        </div>
        <div class="form-group">
            <label for="TypeUserId">Cargo:</label>
            <input type="number" id="TypeUserId" name="TypeUserId" value="@Model.TypeUserId" required />
        </div>
        <div class="form-group">
            <button type="submit">Salvar</button>
        </div>
    </form>

    <a href="/User/List">Voltar para a Lista de Usuários</a>
</div>
