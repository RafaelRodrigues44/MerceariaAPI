@model IEnumerable<MerceariaAPI.Areas.Identity.Models.ApplicationUser>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        body {
            font-family: Arial, sans-serif;
            background-image: url("https://citybreakinfo.com/pix/2018-07/1532261860269744-1.jpg");
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 100vh;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            color: #ede9e9; /* Texto branco */
        }

        .list-container {
            width: 40%;
            padding: 20px;
            background-color: rgba(0, 0, 0, 0.5);
            border-radius: 10px;
            box-shadow: 0px 0px 20px rgba(50, 49, 49, 0.1);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            margin-top: 250px;
            margin-left: 450px;
            text-align: center;
        }

        h2 {
            text-align: center;
            color: #ede9e9;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
            color: #ede9e9; /* Texto branco */
        }

        table th, table td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ccc;
        }

        table th {
            background-color: rgba(0, 0, 0, 0.7);
            color: #fff;
        }

        table tr:nth-child(even) {
            background-color: rgba(255, 255, 255, 0.1);
        }

        table tr:hover {
            background-color: rgba(255, 255, 255, 0.2);
        }

        a {
            color: #94be86;
            text-decoration: none;
            margin-right: 10px;
        }

        a:hover {
            text-decoration: underline;
        }

        .btn-add {
            display: inline-block;
            padding: 10px 15px;
            font-size: 16px;
            background-color: #376c49;
            color: #fff;
            border: none;
            border-radius: 3px;
            cursor: pointer;
            transition: background-color 0.3s;
            text-align: center;
            margin-top: 10px;
        }

        .btn-add:hover {
            background-color: #94be86;
        }
    </style>
}

<div class="list-container">
    <h3>Lista de Usuários</h3>

    <table>
        <thead>
                <th>Nome de Usuário</th>
                <th>Email</th>
                <th>Cargo</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.TypeUser</td>
                    <td>
                        <a href="/User/Edit/@user.Id">Editar</a> |
                        <a href="/User/Delete/@user.Id">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/User/Create" class="btn-add">Adicionar</a>
</div>
