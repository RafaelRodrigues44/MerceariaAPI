@model MerceariaAPI.Areas.Identity.Models.ApplicationUser

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        body {
            font-family: Arial, sans-serif;
            background-image: url("https://citybreakinfo.com/pix/2018-07/1532261860269744-1.jpg");
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 100vh;
            justify-content: center;
            align-items: center;
            color: #fff; 
        }

        .create-container {
            width: 400px;
            background-color: rgba(0, 0, 0, 0.5); 
            border-radius: 10px;
            box-shadow: 0px 0px 20px rgba(50, 49, 49, 0.1);
            backdrop-filter: blur(10px); 
            -webkit-backdrop-filter: blur(10px); 
            border: 1px solid rgba(255, 255, 255, 0.2); 
            margin-top: 180px;
            margin-left: 540px;
            margin-bottom: 30px ;
            padding-bottom: 20px;
            text-align: center;
        }

        .form-group {
            margin-bottom: 20px;
            text-align: center;
        }

        label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
            color: #ede9e9;
        }

        .form-control {
            width: calc(60% - 20px); 
            padding: 10px;
            font-size: 12px;
            border: 1px solid #ccc;
            border-radius: 3px;
            background-color: #fff; 
            color: #333; 
            margin-bottom: 5px;
        }

        button[type="submit"] {
            width: 40%;
            padding: 10px 20px;
            font-size: 14px;
            background-color: #13603c;
            color: #fff;
            border: none;
            border-radius: 3px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        button[type="submit"]:hover {
            background-color: #7fc8a7;
        }

        .cancel-link {
            display: block;
            text-align: center;
            color: #ede9e9;
            text-decoration: none;
            margin-top: 8px;
        }

        .cancel-link:hover {
            text-decoration: underline;
        }
    </style>
}

<div class="create-container">
    <h3>Criar Novo Usuário</h3>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label for="Username">Nome de Usuário:</label>
            <input type="text" id="Username" name="Username" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="Email">Email:</label>
            <input type="email" id="Email" name="Email" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="Password">Senha:</label>
            <input type="password" id="Password" name="Password" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="TypeUserId">Cargo:</label>
            <input type="number" id="TypeUserId" name="TypeUserId" class="form-control" required />
        </div>

        <div class="form-group">
            <button type="submit">Salvar</button>
        </div>
    </form>

    <a href="/User/List" class="cancel-link">Voltar para a Lista de Usuários</a>
</div>
