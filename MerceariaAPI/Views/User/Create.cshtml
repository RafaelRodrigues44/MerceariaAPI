@model MerceariaAPI.Areas.Identity.Models.ApplicationUser

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Criar Novo Usuário</h2>

<form asp-action="Create" method="post">
    <div>
        <label for="Username">Nome de Usuário:</label>
        <input type="text" id="Username" name="Username" required />

        <label for="Email">Email:</label>
        <input type="email" id="Email" name="Email" required />

        <label for="Password">Senha:</label>
        <input type="password" id="Password" name="Password" required />

        <label for="TypeUserId">Cargo:</label>
        <input type="number" id="TypeUserId" name="TypeUserId" required />
    </div>
    <div>
        <button type="submit">Salvar</button>
    </div>
</form>

<a href="/ApplicationUser/List">Voltar para a Lista de Usuários</a>
