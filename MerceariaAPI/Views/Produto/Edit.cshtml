@model MerceariaAPI.Models.Produto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        body {
            font-family: Arial, sans-serif;
            background-image: url("https://citybreakinfo.com/pix/2018-07/1532261860269744-1.jpg");
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 100vh;
            justify-content: center;
            align-items: center;
        }

        .form-container {
            width: 400px;
            padding: 30px;
            background-color: rgba(0, 0, 0, 0.5); 
            border-radius: 10px;
            box-shadow: 0px 0px 20px rgba(50, 49, 49, 0.1);
            backdrop-filter: blur(10px); 
            -webkit-backdrop-filter: blur(10px); 
            border: 1px solid rgba(255, 255, 255, 0.2); 
            margin-top: 120px;
            margin-bottom: 20px;
            margin-left: 500px;
        }

        .form-group {
            margin-bottom: 20px;
            text-align: center;
        }

        .btn-primary {
            width: 40%;
            padding: 10px;
            font-size: 16px;
            background-color: #376c49;
            color: #fff;
            border: none;
            border-radius: 3px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .btn-primary:hover {
            background-color: #94be86;
        }

        .form-control {
            width: 60%; 
            padding: 10px;
            font-size: 12px;
            border: 1px solid #ccc;
            border-radius: 3px;
            background-color: white; 
            color: #333; 
            -webkit-appearance: none; 
            -moz-appearance: none; 
            appearance: none;
            margin-bottom: 10px;
        }

        label {
            font-weight: bold;
            margin-bottom: 8px;
            display: block;
            color: #ede9e9;
        }

        .form-container a {
            display: block;
            text-align: center;
            color: #ede9e9;
            text-decoration: none;
        }

        .form-container a:hover {
            text-decoration: underline;
        }
    </style>
}

<div class="form-container">
    <h2 style="color: #ede9e9; text-align: center;">Editar Produto</h2>
    <form asp-action="Edit" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="form-group">
            <label for="Nome">Nome:</label>
            <input type="text" id="Nome" name="Nome" class="form-control" value="@Model.Nome" required />
        </div>
        <div class="form-group">
            <label for="TipoProdutoId">TipoProdutoId:</label>
            <input type="text" id="TipoProdutoId" name="TipoProdutoId" class="form-control" value="@Model.TipoProdutoId" required />
        </div>
        <div class="form-group">
            <label for="Descricao">Descricao:</label>
            <input type="text" id="Descricao" name="Descricao" class="form-control" value="@Model.Descricao" required />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </form>
    <a href="/Produto/List">Voltar para a Lista</a>
</div>
